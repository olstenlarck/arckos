# Constants
set $alt      Mod1
set $mod      Mod4
set $win      Mod4
set $super    Mod4
set $shift    Shift
set $ctrl     Control
set $esc      Escape
set $del      Delete
set $ret      Return
set $return   Return
set $enter    Return
set $exec exec --no-startup-id

